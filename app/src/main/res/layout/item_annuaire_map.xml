<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    card_view:cardCornerRadius="1dp"
    card_view:cardUseCompatPadding="true" >
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp">

        <LinearLayout
            android:id="@+id/linear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:paddingLeft="17dp"
            android:paddingRight="17dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/nomPrenom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/colorText"
                android:textSize="14dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/taffe"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/colorText"
                android:textSize="12dp" />
            <TextView
                android:id="@+id/phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:gravity="center"
                android:textColor="@color/colorText"
                android:textSize="12dp" />
            <TextView
                android:id="@+id/txtemail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text=""
                android:textColor="@color/colorText"
                android:textSize="12dp" />
            <TextView
                android:id="@+id/adresse"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:gravity="center"
                android:textColor="@color/colorText"
                android:textSize="12dp" />
            <TextView
                android:id="@+id/ouverture"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:gravity="center"
                android:textColor="@color/colorText"
                android:textSize="12dp" />
            <TextView
                android:id="@+id/fermture"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:gravity="center"
                android:textColor="@color/colorText"
                android:textSize="12dp" />

            <!--<TextView
                android:id="@+id/adresse"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/colorText"
                android:textSize="12dp" />-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="0dip"
                android:layout_marginTop="1dp"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_alignParentLeft="true"
                android:layout_marginRight="5dip">

                <ImageButton
                    android:id="@+id/btnAppel"
                    android:layout_width="55dip"
                    android:layout_height="42dp"
                    android:background="@color/colorActive"
                    android:src="@drawable/phones"/>
                <ImageButton
                    android:id="@+id/btnMessage"
                    android:layout_width="55dip"
                    android:layout_height="40dp"
                    android:background="@color/colorActive"
                    android:src="@drawable/emails"/>
                <ImageButton
                android:id="@+id/btnItinaire"
                android:layout_width="55dip"
                android:layout_height="40dp"
                android:background="@color/colorActive"
                android:src="@drawable/distance"/>

               <!-- -->
                <ImageButton
                    android:src="@drawable/favorite_heart_button_blacn"
                    android:id="@+id/btnFavorite"
                    android:layout_width="55dip"
                    android:layout_height="40dp"
                    android:background="@color/colorActive"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="3dip"
                android:visibility="gone"
                android:orientation="horizontal"
                android:layout_alignParentLeft="true"
                android:layout_marginRight="5dip">
                <TextView
                    android:id="@+id/txtLongitude"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text=""
                    android:textColor="@color/colorText"
                    android:textSize="12dp" />
                <TextView
                    android:id="@+id/txtLatitude"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:layout_marginTop="5dp"
                    android:textColor="@color/colorText"
                    android:textSize="12dp" />

            </LinearLayout>

        </LinearLayout>
        <TextView
            android:id="@+id/idcontact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:visibility="gone"
            android:textColor="@color/colorText"
            android:textSize="12dp" />
        <TextView
            android:id="@+id/idFavories"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:visibility="gone"
            android:textColor="@color/colorText"
            android:textSize="12dp" />
        <!-- <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_marginTop="80dp"
             android:paddingLeft="@dimen/activity_horizontal_margin"
             android:orientation="horizontal">

             <ImageButton
                 android:id="@+id/btnAppel"
                 android:layout_width="40dp"
                 android:layout_height="wrap_content"
                 android:src="@drawable/phone"
                 android:background="@color/colorActive"
                 android:textColor="@color/colorText"
                 android:theme="@style/MyButton" />

             <ImageButton
                 android:id="@+id/btnMessage"
                 android:layout_width="45dp"
                 android:paddingLeft="10dp"
                 android:layout_height="wrap_content"
                 android:background="@color/colorActive"
                 android:src="@drawable/email"
                 android:theme="@style/MyButton"
                 android:textColor="@color/colorText" />
         </LinearLayout>-->
    </RelativeLayout>
</android.support.v7.widget.CardView>