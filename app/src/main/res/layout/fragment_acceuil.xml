<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingTop="3dp">
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_cornerbtn"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:id="@+id/layout1"
        android:layout_alignParentTop="true"
        android:orientation="vertical">
        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:elevation="8dp"
            android:gravity="center_vertical"
            android:paddingBottom="4dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingTop="8dp"
            android:focusable="true"
            android:focusableInTouchMode="true"
            >
            <EditText
                android:id="@+id/EditQuery__"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingLeft="5dp"
                android:hint="@string/titre_recherche"
                android:textColorHint="@color/colorText"
                android:background="@drawable/editback"
                android:textColor="#555555"
                android:textSize="14sp" />
            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/_btnRecherche_"
                style="@style/btn"
                android:layout_width="24dp"
                android:background="@drawable/ic_search_black_24dp"
                android:layout_height="24dp"
                android:layout_marginRight="5dp"
                />
            <!--<android.support.v7.widget.AppCompatImageView
                android:id="@+id/btnShow"
                style="@style/btn"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="@drawable/ic_keyboard_arrow_down_black_24dp"
                />-->
            <!--android:background=""-->
        </LinearLayout>
        <include layout="@layout/layout_recherche"/>
    </LinearLayout>
    <!--<TextView
        android:layout_width="match_parent"
        android:layout_height="18dp"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/layout1"
        android:textColor="@color/colorText"
        android:textStyle="italic|bold"
        android:gravity="center"
        android:textSize="14dp"
        android:id="@+id/txtCountAccueil"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />-->
    <LinearLayout
        android:id="@+id/layout"
        android:layout_below="@+id/layout1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="1dp"
        android:paddingRight="1dp">
        <!---->
        <com.example.raoelson.fgu.Outils.MapWrapperLayout
            android:id="@+id/map_relative_layout"
            android:layout_width="match_parent"
            android:layout_height="330dp">
            <com.google.android.gms.maps.MapView
                android:id="@+id/map"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                />
        </com.example.raoelson.fgu.Outils.MapWrapperLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout"
        android:layout_marginTop="1dp"
        android:background="@color/colorPrimaryDark"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:gravity="center">
            <android.support.v7.widget.AppCompatButton
                android:id="@+id/btnAvocat_"
                android:layout_width="101dp"
                android:textColor="@color/colorActive"
                android:background="@drawable/rounded_corner"
                android:layout_height="40dp"
                android:layout_marginTop="24dp"
                android:layout_marginLeft="3dp"
                android:layout_marginBottom="24dp"
                android:padding="12dp"
                android:text="Avocat"/>
            <android.support.v7.widget.AppCompatButton
                android:layout_width="115dp"
                android:id="@+id/btnAssurance_"
                android:layout_marginLeft="20dp"
                android:textColor="@color/colorActive"
                android:background="@drawable/rounded_corner"
                android:layout_height="40dp"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="24dp"
                android:padding="12dp"
                android:text="assurance"/>

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/btnBanque_"
                android:layout_width="95dp"
                android:layout_height="40dp"
                android:layout_marginBottom="24dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="24dp"
                android:background="@drawable/rounded_corner"
                android:padding="12dp"
                android:text="Banque"
                android:textColor="@color/colorActive" />
        </LinearLayout>
        <LinearLayout android:id="@+id/thumbnail"
            android:layout_width="match_parent"
            android:layout_height="69dp"
            android:orientation="horizontal"
            android:layout_marginTop="0dp"
            android:paddingLeft="2dp"
            android:gravity="center">
            <android.support.v7.widget.AppCompatButton
                android:id="@+id/btnExprt_"
                android:layout_width="102dp"
                android:textColor="@color/colorActive"
                android:background="@drawable/rounded_corner"
                android:layout_height="52dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="24dp"
                android:padding="12dp"
                android:text="Expert \nComptable"/>
            <android.support.v7.widget.AppCompatButton
                android:layout_width="115dp"
                android:layout_marginLeft="20dp"
                android:textColor="@color/colorActive"
                android:background="@drawable/rounded_corner"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="24dp"
                android:padding="1dp"
                android:id="@+id/btnCommunication_"
                android:text="Communication"/>

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/btnNotaire_"
                android:layout_width="95dp"
                android:layout_height="50dp"
                android:layout_marginBottom="24dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/rounded_corner"
                android:padding="12dp"
                android:text="Notaire"
                android:textColor="@color/colorActive" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>

