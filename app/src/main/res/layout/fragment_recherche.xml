<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="5dp"
    android:paddingBottom="@dimen/activity_vertical_margin">
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_cornerbtn"
        android:paddingLeft="10dp"
        android:id="@+id/layout"
        android:layout_marginTop="10dp"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/llAddComment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:elevation="8dp"
            android:gravity="center_vertical"
            android:paddingBottom="4dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingTop="8dp"
            android:focusable="true"
            android:focusableInTouchMode="true"
            >
            <EditText
                android:id="@+id/EditQuery_rec"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingLeft="5dp"
                android:textCursorDrawable="@null"
                android:hint="Essayez Avocat,Banque,Notaire,etc"
                android:textColorHint="@color/colorText"
                android:background="@drawable/editback"
                android:textColor="#555555"
                android:singleLine="true"
                android:textSize="14sp" />
            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/btnRecherche_rec"
                style="@style/btn"
                android:layout_width="24dp"
                android:background="@drawable/ic_search_black_24dp"
                android:layout_height="24dp"
                android:layout_marginRight="5dp"
                />
            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/btnShow"
                style="@style/btn"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="@drawable/ic_keyboard_arrow_down_black_24dp"
                />
            <!--android:background=""-->
        </LinearLayout>
        <include layout="@layout/layout_recherche"/>
    </LinearLayout>
    <LinearLayout android:layout_width="fill_parent"
        android:layout_below="@+id/layout"
        android:id="@+id/text"
        android:layout_centerInParent="true"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_height="74dp"
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:src="@mipmap/texttitre"
            ></ImageView>
    </LinearLayout>
    <LinearLayout android:layout_width="match_parent"
        android:layout_below="@+id/text"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:background="@drawable/rounded_corner"
            android:id="@+id/textInput"
            android:layout_marginTop="20dp">
            <android.support.v7.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="@color/colorActive"
                android:text="VOTRE KBIS DANS 48H"
                android:layout_centerHorizontal="true" />
        </android.support.design.widget.TextInputLayout>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
</RelativeLayout>

