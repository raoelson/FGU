<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:behavior_peekHeight="150dp"
    app:layout_behavior="android.support.design.widget.BottomSheetBehavior">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/LinearSysteme"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="28dp"
            android:background="@android:color/white"
            android:elevation="4dp"
            android:orientation="vertical">

            <LinearLayout android:id="@+id/text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/layout"
                android:background="@color/colorPrimaryDark"
                android:orientation="vertical"
                xmlns:android="http://schemas.android.com/apk/res/android"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:weightSum="1">
                    <android.support.v7.widget.AppCompatButton
                        android:layout_width="102dp"
                        android:id="@+id/btnAvocat_"
                        android:textColor="@color/colorActive"
                        android:background="@drawable/rounded_corner_avocat"
                        android:layout_height="40dp"
                        android:layout_marginTop="24dp"
                        android:layout_marginBottom="24dp"
                        android:padding="12dp"
                        android:text="Avocat" />
                    <android.support.v7.widget.AppCompatButton
                        android:layout_width="130dp"
                        android:id="@+id/btnAssurance_"
                        android:textColor="@color/colorActive"
                        android:background="@drawable/rounded_corner_assurance"
                        android:layout_height="40dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="24dp"
                        android:layout_marginBottom="24dp"
                        android:padding="12dp"
                        android:text="assurance" />

                    <android.support.v7.widget.AppCompatButton
                        android:layout_width="85dp"
                        android:id="@+id/btnBanque_"
                        android:layout_height="40dp"
                        android:layout_marginBottom="24dp"
                        android:layout_marginTop="24dp"
                        android:background="@drawable/rounded_corner_banque"
                        android:padding="12dp"
                        android:text="Banque"
                        android:layout_marginLeft="5dp"
                        android:textColor="@color/colorActive" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="69dp"
                    android:orientation="horizontal"
                    android:gravity="center">
                    <android.support.v7.widget.AppCompatButton
                        android:layout_width="102dp"
                        android:textColor="@color/colorActive"
                        android:background="@drawable/rounded_corner_comptable"
                        android:layout_height="50dp"
                        android:layout_marginTop="16dp"
                        android:id="@+id/btnExprt_"
                        android:layout_marginBottom="24dp"
                        android:padding="0dp"
                        android:text="Expert \nComptable"/>
                    <android.support.v7.widget.AppCompatButton
                        android:layout_width="130dp"
                        android:textColor="@color/colorActive"
                        android:background="@drawable/rounded_corner_communication"
                        android:layout_height="50dp"
                        android:id="@+id/btnCommunication_"
                        android:layout_marginTop="16dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginBottom="24dp"
                        android:text="Communication"/>

                    <android.support.v7.widget.AppCompatButton
                        android:layout_width="85dp"
                        android:layout_height="50dp"
                        android:id="@+id/btnNotaire_"
                        android:layout_marginBottom="24dp"
                        android:layout_marginTop="16dp"
                        android:background="@drawable/rounded_corner_notaire"
                        android:padding="12dp"
                        android:layout_marginLeft="5dp"
                        android:text="Notaire"
                        android:textColor="@color/colorActive" />
                </LinearLayout>
            </LinearLayout></LinearLayout>
    </FrameLayout>

</android.support.v4.widget.NestedScrollView>